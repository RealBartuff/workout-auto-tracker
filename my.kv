#:kivy 2.0.0
#:import Factory kivy.factory.Factory

WindowManager:
    Menu:
    WorkingScreen:
    Calendar:

<Menu>:
    name: "Menu"
    canvas.before:
        Color:
            rgba: (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 1
        size: root.width - 400, root.height - 400
        pos: 200, 200

    Button:
        size_hint: 0.25, 0.25
        pos_hint: {"center_x": .5, "y": 0.65}
        text: "START WORKOUT"
        on_release:
            app.root.current = "Workout"
            root.manager.transition.direction = "left"

    Button:
        size_hint: 0.25, 0.25
        pos_hint: {"center_x": .5, "y": 0.4}
        text: "YOUR PROGRESS"
        on_release:
            app.root.current = "Calendar"
            root.manager.transition.direction = "left"

    Button:
        size_hint: 0.25, 0.25
        pos_hint: {"center_x": .5, "y": 0.15}
        text: "EXIT"
        on_release:
            root.end()

<WorkingScreen>:
    name: "Workout"
    canvas.before:
        Color:
            rgba: (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 1
        size: root.width, root.height

        KivyCamera:
            id: qrcam
            allow_stretch: True

        GridLayout:
            cols: 3
            size_hint: 1, 0.2

            Button:
                size_hint: 0.25, 0.25
                pos_hint: {"x": 0.25, "top":1}
                text: "START"
                on_release:
                    root.dostart()

            Button:
                size_hint: 0.25, 0.25
                pos_hint: {"x": 0.5, "top":1}
                text: "PAUSE"
                on_release:
                    app.root.current = "Menu"
                    root.manager.transition.direction = "right"
                    root.doexit()

            Button:
                size_hint: 0.25, 0.25
                pos_hint: {"x": 0.75, "top":1}
                text: "GO BACK"
                on_release:
                    app.root.current = "Menu"
                    root.manager.transition.direction = "right"

<Calendar>:
    name: "Calendar"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height - 200

        Label:
            id: pushups
            font_size: 30

        Label:
            id: goals_pump
            font_size: 20
            size_hint_y: .2
            text: "Your todays goal is: " + root.message_p

        ProgressBar:
            id: pompkowy_bar
            min: 0
            pos_hint: {"x": .1}
            size_hint_x: .8
            max: int(root.message_p)
            value: root.get_pups()

        Label:
            id: sit_ups
            font_size: 30

        Label:
            id: goals_sits
            font_size: 20
            size_hint_y: .2
            text: "Your todays goal is: " + root.message_s

        ProgressBar:
            id: przysiadowy_bar
            min: 0
            pos_hint: {"x": .1}
            size_hint_x: .8
            max: int(root.message_s)
            value: root.get_sits()

        Label:
            id: xxx
            text: ""

    GridLayout:
        cols: 2
        size_hint: 1, 0.2

        Button:
            size_hint: 0.25, 0.25
            pos_hint: {"x": 0.4, "y": 0.01}
            text: "Go Back"
            on_release:
                # root.close_db()
                app.root.current = "Menu"
                root.manager.transition.direction = "right"

        Button:
            size_hint: 0.25, 0.25
            pos_hint: {"x": 0.4, "y": 0.01}
            text: "Set Your Daily Goals"
            on_release:
                Factory.TestPop().open()

<TestPop@Popup>:
    title: 'Set your daily goals:'
    size_hint: .5, .5
    BoxLayout:
        orientation:
            'vertical'
        RelativeLayout:
            TextInput:
                id: ti
                size_hint: .7, None
                height: 30
                pos_hint: {'center_y': 0.6, 'center_x': 0.5}
                multiline: False
                hint_text: 'Enter number of push-ups'
                on_text_validate:
                    # close popup on enter in textinput
                    app.root.get_screen("Calendar").message_p = self.text
                    root.dismiss()

            TextInput:
                id: tis
                size_hint: .7, None
                height: 30
                pos_hint: {'center_y': 0.4, 'center_x': 0.5}
                multiline: False
                hint_text: 'Enter number of sit-ups'
                on_text_validate:
                    # close popup on enter in textinput
                    app.root.get_screen("Calendar").message_s = self.text
                    root.dismiss()
        BoxLayout:
            size_hint_y: None
            height: 48
            Button:
                text: 'Set your goal!'
                on_release:
                    app.root.get_screen("Calendar").message_p = ti.text
                    app.root.get_screen("Calendar").message_s = tis.text
                    root.dismiss()
            Button:
                text: 'Cancel'
                on_release: root.dismiss()
